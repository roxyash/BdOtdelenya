        xmlns:local="clr-namespace:BdBegin.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="238.268" Width="357.067"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="CornflowerBlue" ResizeMode="NoResize">
