        <Button x:Name="SignEnabled" Content="Войти" HorizontalAlignment="Left" Margin="110,149,0,0" VerticalAlignment="Top" Width="59" Click="SignButton" IsEnabled="True" Height="24"/>
        <Button x:Name="BackEnabled" Content="Назад" HorizontalAlignment="Left" Margin="274,195,0,0" VerticalAlignment="Top" Width="58" Click="BackButton" IsEnabled="True" Height="24"/>
